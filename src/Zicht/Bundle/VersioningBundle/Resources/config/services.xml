<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="zicht_versioning.serializer" class="Zicht\Bundle\VersioningBundle\Services\SerializerService">
            <argument type="service" id="annotations.reader"/>
        </service>
        <service id="zicht_versioning.manager" class="Zicht\Bundle\VersioningBundle\Services\VersioningService">
            <argument type="service" id="doctrine"/>
            <argument type="service" id="zicht_versioning.serializer"/>
        </service>
    </services>
</container>
