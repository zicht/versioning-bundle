<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="zicht_versioning.doctrine.persist_listener" public="false" class="Zicht\Bundle\VersioningBundle\Doctrine\EventListener">
            <tag name="doctrine.event_listener" event="postPersist" />
            <tag name="doctrine.event_listener" event="postUpdate" />
            <argument type="service" id="doctrine"/>
            <argument type="service" id="zicht_versioning.serializer"/>
            <argument type="service" id="zicht_versioning.manager"/>
        </service>
    </services>
</container>
